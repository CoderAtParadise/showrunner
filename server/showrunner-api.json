{
  "openapi": "3.0.0",
  "info": {
    "title": "Showrunner API",
    "description": "This API has been created to support the development of showrunner.",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "runsheet-list": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/service-info"
        }
      },
      "service-info": {
        "type": "object",
        "required": ["campus", "service", "date", "title"],
        "properties": {
          "campus": {
            "type": "string",
            "example": "mackenzie"
          },
          "service": {
            "type": "string",
            "example": "8am-10am"
          },
          "date": {
            "type": "string",
            "format": "date",
            "example": "2021-01-03T00:00:00.000Z"
          },
          "title": {
            "type": "string",
            "example": "SUMMER FAVOURITES"
          },
          "subtitle": {
            "type": "string",
            "example": "week 20"
          }
        }
      },
      "position": {
        "type": "object",
        "required": ["role"],
        "properties": {
          "role": {
            "type": "string",
            "example": "Preaching",
            "xml": {
              "attribute": true
            }
          },
          "person": {
            "type": "string",
            "example": "Jason Elsmore",
            "xml": {
              "attribute": true
            }
          }
        },
        "xml": {
          "name": "position"
        }
      },
      "team-members": {
        "type": "object",
        "properties": {
          "team-members": {
            "type": "string",
            "example": "Mark"
          }
        }
      },
      "tech-notes": {
        "type": "object",
        "properties": {
          "media-notes": {
            "$ref": "#/components/schemas/notes"
          },
          "audio-notes": {
            "$ref": "#/components/schemas/notes"
          }
        }
      },
      "song": {
        "allOf": [
          {
            "type": "object",
            "required": ["title", "first-line", "key"],
            "properties": {
              "title": {
                "type": "string",
                "example": "Reckless Love"
              },
              "first-line": {
                "type": "string",
                "example": "Before I spoke a word"
              },
              "key": {
                "type": "string",
                "example": "E"
              }
            },
            "xml": {
              "name": "song"
            }
          },
          {
            "$ref": "#/components/schemas/team-members"
          },
          {
            "$ref": "#/components/schemas/tech-notes"
          }
        ]
      },
      "song-list": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/song"
        },
        "xml": {
          "wrapped": true,
          "name": "song-list"
        }
      },
      "regular-item": {
        "allOf": [
          {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "example": "Setup"
              }
            }
          },
          {
            "$ref": "#/components/schemas/team-members"
          },
          {
            "$ref": "#/components/schemas/tech-notes"
          }
        ]
      },
      "announcments": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/regular-item"
        },
        "required": ["name"],
        "properties": {}
      },
      "item": {
        "type": "object",
        "properties": {
          "start-time": {
            "type": "string",
            "pattern": "\\d{2}:\\d{2}",
            "example": 720
          },
          "duration": {
            "type": "string",
            "pattern": "\\d{2}mins",
            "example": "20mins"
          },
          "item": {
            "anyOf": [
              {
                "$ref": "#/components/schemas/song-list"
              },
              {
                "$ref": "#/components/schemas/regular-item"
              },
              {
                "$ref": "#/components/schemas/announcments"
              }
            ],
            "xml": {
              "name": "item"
            }
          }
        }
      },
      "notes": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "runsheet": {
        "type": "object",
        "properties": {
          "service-info": {
            "$ref": "#/components/schemas/service-info"
          },
          "team": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/position"
            },
            "xml": {
              "wrapped": true,
              "name": "team"
            }
          },
          "time-sheet": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/item"
            },
            "xml": {
              "wrapped": true,
              "name": "time-sheet"
            }
          },
          "handouts": {
            "$ref": "#/components/schemas/notes"
          },
          "service-notes": {
            "$ref": "#/components/schemas/notes"
          }
        }
      },
      "item-timer": {
        "type": "object",
        "properties": {
          "start-time": {
            "type": "string",
            "format": "date",
            "example": "2021-01-03T00:00:00.000Z"
          },
          "end-time": {
            "type": "string",
            "format": "date",
            "example": "2021-01-03T00:00:00.000Z"
          },
          "complete": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "show-item": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "item": {
                "type": "string",
                "example": "Reckless Love"
              }
            }
          },
          {
            "$ref": "#/components/schemas/item-timer"
          }
        ]
      },
      "nested-show-item": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "item": {
                "oneOf": [
                  {
                    "$ref": "#/components/schemas/nested-show-item"
                  },
                  {
                    "$ref": "#/components/schemas/show-item"
                  }
                ]
              }
            }
          },
          {
            "$ref": "#/components/schemas/item-timer"
          }
        ]
      },
      "up-next": {
        "type": "object",
        "properties": {
          "current-item": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/nested-show-item"
              },
              {
                "$ref": "#/components/schemas/show-item"
              }
            ]
          },
          "next-item": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/nested-show-item"
              },
              {
                "$ref": "#/components/schemas/show-item"
              }
            ]
          }
        }
      },
      "prompt": {
        "type" : "object",
        "properties": {

        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/{campus}/runsheet": {
      "get": {
        "summary": "Returns a list of runsheets for a campus.",
        "tags": ["Runsheet"],
        "parameters": [
          {
            "in": "path",
            "name": "campus",
            "required": true,
            "description": "The Campus",
            "schema": {
              "type": "string",
              "example": "mackenzie"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A JSON array of runsheet objects comprising service and date",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/runsheet-list"
                }
              }
            }
          },
          "404": {
            "description": "No Campus exists",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": " No Campus exist"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{campus}/{service}/runsheet/": {
      "get": {
        "summary": "Returns a list of runsheets for a service",
        "tags": ["Runsheet"],
        "parameters": [
          {
            "in": "path",
            "name": "campus",
            "required": true,
            "description": "The Campus",
            "schema": {
              "type": "string",
              "example": "mackenzie"
            }
          },
          {
            "in": "path",
            "name": "service",
            "required": true,
            "description": "The service",
            "schema": {
              "type": "string",
              "example": "8am-10am"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A Json array of runsheet objects for a given service",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/runsheet-list"
                }
              }
            }
          },
          "404": {
            "description": "No service exists for campus",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "No service exists for campus"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/{campus}{service}/{date}/runsheet/": {
      "get": {
        "summary": "Returns a runsheet",
        "tags": ["Runsheet"],
        "parameters": [
          {
            "in": "path",
            "name": "campus",
            "required": true,
            "description": "The Campus",
            "schema": {
              "type": "string",
              "example": "mackenzie"
            }
          },
          {
            "in": "path",
            "name": "service",
            "required": true,
            "description": "The service",
            "schema": {
              "type": "string",
              "example": "8am-10am"
            }
          },
          {
            "in": "path",
            "name": "date",
            "required": true,
            "description": "The date",
            "schema": {
              "type": "string",
              "example": "2020-01-03"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A xml file",
            "content": {
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/runsheet"
                }
              }
            }
          }
        }
      }
    },
    "/{campus}{service}/{date}/show": {
      "get": {
        "summary": "Returns an overview of the entire service",
        "tags": ["Show"],
        "parameters": [
          {
            "in": "path",
            "name": "campus",
            "required": true,
            "description": "The Campus",
            "schema": {
              "type": "string",
              "example": "mackenzie"
            }
          },
          {
            "in": "path",
            "name": "service",
            "required": true,
            "description": "The service",
            "schema": {
              "type": "string",
              "example": "8am-10am"
            }
          },
          {
            "in": "path",
            "name": "date",
            "required": true,
            "description": "The date",
            "schema": {
              "type": "string",
              "example": "2020-01-03"
            }
          }
        ]
      }
    },
    "/{campus}/{service}/{date}/show/up-next": {
      "get": {
        "summary": "Returns a what the current item is and what is up next",
        "tags": ["Show"],
        "parameters": [
          {
            "in": "path",
            "name": "campus",
            "required": true,
            "description": "The Campus",
            "schema": {
              "type": "string",
              "example": "mackenzie"
            }
          },
          {
            "in": "path",
            "name": "service",
            "required": true,
            "description": "The service",
            "schema": {
              "type": "string",
              "example": "8am-10am"
            }
          },
          {
            "in": "path",
            "name": "date",
            "required": true,
            "description": "The date",
            "schema": {
              "type": "string",
              "example": "2020-01-03"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A JSON array of runsheet objects comprising service and date",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/up-next"
                }
              }
            }
          }
        }
      }
    },
    "/{campus}/{service}/{data}/show/prompt": {
      "get": {
        "summary": "Returns a what the current item is and what is up next",
        "tags": ["Show"],
        "parameters": [
          {
            "in": "path",
            "name": "campus",
            "required": true,
            "description": "The Campus",
            "schema": {
              "type": "string",
              "example": "mackenzie"
            }
          },
          {
            "in": "path",
            "name": "service",
            "required": true,
            "description": "The service",
            "schema": {
              "type": "string",
              "example": "8am-10am"
            }
          },
          {
            "in": "path",
            "name": "date",
            "required": true,
            "description": "The date",
            "schema": {
              "type": "string",
              "example": "2020-01-03"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A JSON array of runsheet objects comprising service and date",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/prompt"
                }
              }
            }
          }
        }
      }
    }
  }
}
